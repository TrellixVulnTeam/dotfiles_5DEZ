BASH_TRUE='true'
BASH_FALSE='false'

##################################################################
## outputs console log
##################################################################
_console_log()
{
	echo '['$(date +'%a %Y-%m-%d %H:%M:%S %z')']' $1
}

##################################################################
## prompts the user for confirmation and returns 'y'/'n'
##################################################################
_confirm()
{
	local answer=''
	local choice=''

	local prompt="confirm [y/n] > "

	until [[ "$choice" = "y" || "$choice" = "n" ]]; do

		read -p "$prompt" answer
		case "$answer" in
			[yY] ) choice='y';;
			[nN] ) choice='n';;
			* ) ;;
		esac
	done

	[ "$choice" = "y" ] && echo $BASH_TRUE || echo $BASH_FALSE
}

_check_for_shell_interactivity()
{
	case "$-" in
		*i* ) echo $BASH_TRUE;;
		* ) echo $BASH_FALSE;;
	esac
}
