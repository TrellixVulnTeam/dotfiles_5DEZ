##################################################################
## outputs console log
##################################################################
function _console_log()
{
	echo '['$(date +'%a %Y-%m-%d %H:%M:%S %z')']' $1
}

##################################################################
## prompts the user for confirmation and returns y/n
##################################################################
function _confirm()
{
	local answer=''
	local choice=''

	local prompt="confirm [y/n] > "

	until [[ "$choice" = "y" || "$choice" = "n" ]]; do

		read -p "$prompt" answer
		case "$answer" in
			[yY] ) choice='y';;
			[nN] ) choice='n';;
			* ) ;;
		esac
	done

	echo $choice
}
